<%= form_for attraction do |f| %>
  <div>
    <ul>
      <% attraction.errors.full_messages.each do |error| %>
        <%= content_tag :li, error %>
      <% end %>
    </ul>
  </div>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :media %>
  <%= f.text_field :media %>

  <%= f.label :day %>
  <%= f.datetime_select :day %>

  <%= f.submit %>
<% end %>
