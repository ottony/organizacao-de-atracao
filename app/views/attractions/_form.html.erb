<%= form_for attraction, html: { class: 'form-horizontal' }  do |f| %>
  <%= render 'shared/errors', messages: attraction.errors.full_messages %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :media, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :media, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :day, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :day, class: 'form-control', placeholder: '00/00/0000 00:00' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>
